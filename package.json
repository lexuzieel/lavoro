{
  "name": "lavoro",
  "type": "module",
  "version": "0.2.1",
  "description": "A type-safe, flexible queue library for Node.js with support for multiple drivers",
  "author": "Aleksei Ivanov <contact@aleksei.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lexuzieel/lavoro.git"
  },
  "homepage": "https://github.com/lexuzieel/lavoro#readme",
  "bugs": {
    "url": "https://github.com/lexuzieel/lavoro/issues"
  },
  "keywords": [
    "queue",
    "background",
    "worker",
    "pg-boss",
    "postgres"
  ],
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js"
    }
  },
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "imports": {
    "#services/*": "./src/services/*.js",
    "#providers/*": "./src/providers/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./src/config/*.js"
  },
  "scripts": {
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "build": "tsup-node",
    "watch": "tsup-node --watch",
    "prepublishOnly": "npm run check && npm run test && npm run build",
    "postversion": "git push && git push --tags"
  },
  "peerDependencies": {
    "pg": "^8.16.3",
    "pg-boss": "^12.2.0",
    "pino": "^10.1.0"
  },
  "peerDependenciesMeta": {},
  "devDependencies": {
    "@adonisjs/tsconfig": "^1.4.1",
    "@julr/utils": "^1.9.0",
    "@testcontainers/postgresql": "^11.8.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.10",
    "cron-parser": "^5.4.0",
    "dotenv": "^16.6.1",
    "knex": "^3.1.0",
    "nodemon": "^3.1.11",
    "p-defer": "^4.0.1",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "testcontainers": "^11.8.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "dependencies": {
    "@lavoro/verrou": "^0.5.2",
    "@lukeed/ms": "^2.0.2",
    "croner": "^9.1.0"
  }
}
